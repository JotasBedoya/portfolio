---
import userData from "@shared/data/userData.json";
import SocialLinks from "@shared/components/SocialLinks.astro";
import HeroContent from "./HeroContent.astro";

interface userDataType{
    name: string;
    shortDesc: string;
    location: string;
    availability: boolean;
    profileImg: string;
}

const { name, shortDesc, location, availability } = userData as userDataType;
---

<section id="Home" class="hero scroll-mt-24 flex flex-col lg:flex-row items-center justify-center gap-6 lg:gap-10 w-full min-h-screen max-w-275 mx-auto px-4">
    <HeroContent {...userData}>
        <SocialLinks />
    </HeroContent>

<div
  class="profile-pic
         w-40 h-52
         sm:w-64 sm:h-80
         md:w-96 md:h-96
         lg:w-180 lg:h-100
         rounded-xl mx-auto lg:mx-0"
>
  <img
    class="w-full h-full object-cover object-center rounded-xl"
    src={userData.profileImg}
    alt={userData.name}
  />
</div>
</section>

<style>
    .profile-pic{
        box-shadow: 8px 7px 19px 13px var(--color-fourth);
    }
</style>