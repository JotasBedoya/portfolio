<style>
@keyframes skillsScroll {
  from { transform: translateX(0); }
  to { transform: translateX(-50%); }
}

article {
  display: flex;
  align-items: center; /* centra verticalmente todo el contenido */
  height: 200px; /* ocupa toda la altura disponible */
}

.skills-scroll {
  animation: skillsScroll 28s linear infinite;
  will-change: transform;
}

.skill-icon {
  width: 80px;
  height: 80px;
  backdrop-filter: blur(12px);
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
}

.skill-icon:hover {
  transform: scale(1) translateY(-5px);
  background: var(--color-tag-bg);
  z-index: 10;
}

.skill-icon:hover ~ .skills-scroll {
  animation-play-state: paused;
}

.skill-icon iconify-icon {
  width: 44px;
  height: 44px;
  filter: brightness(1.1) drop-shadow(0 2px 8px rgba(255, 255, 255, 0.4));
  transition: all 0.3s ease;
}

.skill-icon:hover iconify-icon {
  filter: brightness(1.4) drop-shadow(0 4px 12px rgba(255, 255, 255, 0.6));
}


</style>
